{
  "manifest_version": 3,
  "name": "KodNest Dark Extension",
  "version": "1.0",
  "description": "A dark theme extension for KodNest.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://app.kodnest.com/*"],
  "content_scripts": [
    {
      "matches": ["*://app.kodnest.com/*"],
      "js": ["dist/content.bundle.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/popup.bundle.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
